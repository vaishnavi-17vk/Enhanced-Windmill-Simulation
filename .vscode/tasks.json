{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Windmill",
            "type": "shell",
            "command": "g++",
            "args": [
                "windmill_enhanced.cpp",
                "-o",
                "windmill_enhanced.exe",
                "-I./freeglut/include",
                "-L./freeglut/lib",
                "-lfreeglut",
                "-lopengl32",
                "-lglu32",
                "-lgdi32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Compile the windmill simulation with FreeGLUT"
        },
        {
            "label": "Run Windmill",
            "type": "shell",
            "command": "${workspaceFolder}\\windmill_enhanced.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [],
            "detail": "Run the compiled windmill executable"
        },
        {
            "label": "Build and Run",
            "dependsOn": [
                "Compile Windmill",
                "Run Windmill"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compile and run the windmill simulation"
        }
    ]
}
